      $("#dialogue").append('<div class="well"><%= image_tag "pc.png", :size => "40x32", :align => "middle" %> &nbsp;&nbsp;<font size="3">第<%= i %>問<br>&emsp;&emsp;&emsp;&nbsp;<%= @base.find(num).ent %>の<%= @base.find(num).att %>は何ですか？</font></div>');
  <% end %>
}

